generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  name String @db.VarChar(255)
  photo String?
  email String @unique
  password String @db.VarChar(255)
  isAdmin Boolean @default(false)
  rating Rating[]
}

